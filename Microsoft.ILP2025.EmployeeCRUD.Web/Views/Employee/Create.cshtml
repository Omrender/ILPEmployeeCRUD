@model Microsoft.ILP2025.EmployeeCRUD.Entities.EmployeeEntity

<style>
    .centered-form {
        margin: 0 auto;
        text-align: center;
        font-size: 18px;
        max-width: 600px;
    }

    .centered-form input,
    .centered-form label,
    .centered-form button {
        text-align: left;
        font-size: 18px;
    }
</style>

<form asp-action="Create" method="post" class="container mt-4 centered-form">
    <div class="row mb-3">
        <label class="col-sm-2 col-form-label">Id:</label>
        <div class="col-sm-6">
            <input type="text" placeholder="Enter Id" class="form-control" value="" required asp-for="Id" />
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-2 col-form-label">Name:</label>
        <div class="col-sm-6">
            <input type="text" placeholder="Enter Name" class="form-control" required asp-for="Name" />
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-2 col-form-label">Department:</label>
        <div class="col-sm-6">
            <input type="text" placeholder="Enter Department" class="form-control" required asp-for="Department" />
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-2 col-form-label">Age:</label>
        <div class="col-sm-6">
            <input type="text" placeholder="Enter Age" class="form-control" value="" required asp-for="Age" />
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-2 col-form-label">Salary:</label>
        <div class="col-sm-6">
            <input type="text" placeholder="Enter Salary" class="form-control" value="" required asp-for="Salary" />
        </div>
    </div>

    <div class="row">
        <div class="offset-sm-2 col-sm-10">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </div>
</form>
